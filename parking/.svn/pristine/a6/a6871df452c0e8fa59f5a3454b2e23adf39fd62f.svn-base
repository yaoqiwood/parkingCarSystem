html, body
{
    margin: 0;
    height: 100%;
    overflow: hidden;
    font-family: "Microsoft YaHei",微软雅黑,"MicrosoftJhengHei",华文细黑,STHeiti,MingLiu
}

#fengMap
{
    width: 100%;
    height: 100%;
    position: absolute;
    overflow: hidden;
}

#prompt
{
    position: absolute;
    left: 2%;
    bottom: 2%;
}

.path_info
{
    position: absolute;
    left: 2%;
    bottom: 0;
    background: rgba(255,255,255,.3);
    text-indent: 2em;
    padding: 10px 0;
}

/*路径描述全部样式*/
.wholesection{
  width: 100%;
  max-height: 150px;
  overflow: auto;
}
/*路径描述分段样式*/
.subsection{
  height: 250px;
  min-width: 30%;
}

.subsection .resultStyle{
  max-height: 160px;
  overflow: auto;
  padding-right: 10px;
}

.path_info h4
{
    font-weight: 500;
}

.path_info .glyphicon
{
    float: right;
    right: 2%;
}

.path_info .title
{
    position: absolute;
    width: 30px;
    float: right;
    right: 0px;
    cursor: pointer;
}

.path_info p
{
    cursor: pointer;
}

.path_info ul
{
    padding: 10px 0;
    width: auto;
}

.path_info ul li
{
    line-height: 24px;
    list-style: none;
    cursor: pointer;
}

#description
{
    position: absolute;
    left: 2%;
    top: 2%;
    padding: 10px 25px;
    background: rgba(255,255,255,.5);
    border-radius:4px;
}
#message{
    position: absolute;
    top:0;
    width: 100%;
}
