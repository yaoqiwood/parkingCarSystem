$("#updateCommit").click(function() {
	var $dname = $("#updatename");
	var $dstate = $("#updateState");
	var $drole = $("#updateRole");
	var $did = $("#updateid");
	if ($dname.val() == "" || $dstate.val() == "-1" || $drole.val() == "-1" ) {
		alert("请将信息填写完整！");
		return;
	}
	var result = postAjax("motifyAdmin.action",
			{"adminId" : $did.val(),
			"dname" : $dname.val(),
			"dstate" : $dstate.val(),
			"drole" : $drole.val()});
	if(result){
		$("#updatedialog").css("display", "none");
	}
});

