					|| $("#addMoney").val() == "") {
				var b = window.confirm("输入的值不能为空！！！");
			} else {
				$.ajax({
					type : "POST",
					url : "addMonthProduct.action",
					data : {
						"addName" : $("#addName").val(),
						"addmonth" : $("#addmonth").val(),
						"addMoney" : $("#addMoney").val()
					},
					dataType : "json",
					success : function(msg) {
						if (msg.type == 1) {
							alert(msg.message);
							tempData.CurrentPage = 1;
							init();
							$("#adddialog").css("display", "none");
						} else {
							alert(msg.message);
						}
					},
					error : function(msg) {
						alert("请联系管理员。。。");
					}
				});

			}
		});

// 表里面的按钮监听
$("#table").click(function(event) {
	var $tar = $(event.target);
	var arr = $tar.parent().parent().children();
	if ($tar.val() == "删除") {
		var b = window.confirm("您确定要删除么？");
		if (b == true) {
			var $pro_id = $tar.attr("pro_id");
			$.ajax({
				type : "POST",
				url : "delMonthProduct.action",
				data : {
					"pro_id" : $pro_id
				},
				dataType : "json",
				success : function(msg) {
					if (msg.type == 1) {
						alert(msg.message);
						tempData.CurrentPage = 1;
						init();
					} else {
						alert(msg.message);
					}
				},
				error : function(msg) {
					alert("请联系管理员。。。");
				}
			});
		}
	}
	if ($tar.val() == "修改") {
		$("#dialog").css("display", "block");
		var $pro_id = $tar.attr("pro_id");
		$("#did").val($pro_id);
		$.ajax({
			type : "POST",
			url : "showMonthProduct.action",
			data : {
				"pro_id" : $pro_id
			},
			dataType : "json",
			success : function(msg) {
				var monthProduct = msg.monthProduct;
				$("#modName").val(monthProduct.monthProductName);
				$("#modMonth").val(monthProduct.monthProductMonth);
				$("#modMoney").val(monthProduct.monthProductMoney);
			},
			error : function(msg) {
				alert("请联系管理员。。。");
			}
		});
		$("#cancel").click(function() {
			$("#dialog").css("display", "none");
		});

	}
	if ($tar.val() == "禁用") {
		var b = window.confirm("您确定要禁用么？");
		if (b == true) {
			var $pro_id = $tar.attr("pro_id");
			$.ajax({
				type : "POST",
				url : "disableMonthProduct.action",
				data : {
					"pro_id" : $pro_id
				},
				dataType : "json",
				success : function(msg) {
					if (msg.type == 1) {
						alert(msg.message);
						tempData.CurrentPage = 1;
						init();
					} else {
						alert(msg.message);
					}
				},
				error : function(msg) {
					alert("请联系管理员。。。");
				}
			});
		}
	}
	if ($tar.val() == "启用") {
		var b = window.confirm("您确定要启用么？");
		if (b == true) {
			var $pro_id = $tar.attr("pro_id");
			$.ajax({
				type : "POST",
				url : "enableMonthProduct.action",
				data : {
					"pro_id" : $pro_id
				},
				dataType : "json",
				success : function(msg) {
					if (msg.type == 1) {
						alert(msg.message);
						tempData.CurrentPage = 1;
						init();
					} else {
						alert(msg.message);
					}
				},
				error : function(msg) {
					alert("请联系管理员。。。");
				}
			});
		}
	}
});

