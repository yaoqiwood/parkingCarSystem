@Controller
public class PaymentController {
	
	@Autowired
	private PaymentService paymentService;
	
	@Autowired
	private WhiteListMapper paymentWhite;
	
	@Autowired
	private CarnumMapper mapper;
	/*
	 * 自助缴费信息
	 */
	@RequestMapping("/do-payment.ajax")
	@ResponseBody
	public JSONObject payment(String name ,HttpServletRequest request) {
		//查找车辆id
		CarRecord queryRecord = paymentService.queryRecord(name);
		Carnum checkCarnum = mapper.checkCarnum(name);
		WhiteList whiteList = paymentWhite.whiteListInfo(name);
		JSONObject model = new JSONObject();
		if(queryRecord != null) {
			Date date = new Date();
			if(whiteList == null && checkCarnum.getCarRoleId() != 2) {
				//算钱
				List<FeeRule> feeRuleInfo = paymentService.feeRuleInfo();
				ArrayList<Integer> moneyList = new ArrayList<>();
				ArrayList<String> timeList = new ArrayList<>();
				for (int i = 0; i < feeRuleInfo.size(); i++) {
					moneyList.add(feeRuleInfo.get(i).getFeeRuleMoney());
					timeList.add(feeRuleInfo.get(i).getFeeRuleTime());
				}
				Integer sumOfMoney = MenoyUtils.sumOfMoney(queryRecord.getCarRecordComeTime(), date);
				queryRecord.setCarRecordMemo(sumOfMoney+"");
			}else if(whiteList != null){
				queryRecord.setCarRecordMemo(0+"");
				queryRecord.setCarRecordState(3);
			}else {
				queryRecord.setCarRecordMemo(0+"");
				queryRecord.setCarRecordState(2);
			}
			queryRecord.setCarRecordOutTime(date);
			
			model.put("id", 0);
			model.put("info", queryRecord);
		}else {
			model.put("id", 1);
			model.put("message", "未查询到相关信息");
		}
		return model;
	}
	

	/*
	 * 缴费
	 */
	@RequestMapping("/do-alipay.ajax")
	@ResponseBody
	public JSONObject alipay(String mechineId,String carRecordId, String carNum,String money, HttpServletRequest request) {
		//提示缴费成功
		JSONObject model = new JSONObject();
		Integer updateRecord = paymentService.updateRecord(new Date(),Integer.parseInt(carRecordId));
		Integer deleteRecord = paymentService.deleteRecord(Integer.parseInt(carRecordId));
		Integer addMechineLog = paymentService.addMechineLog(Integer.parseInt(mechineId), carNum, Integer.parseInt(money));
		mapper.updatePlaceInfo(carNum);
		if(addMechineLog > 0) {
			model.put("id", 0);
			model.put("message", "付费成功");
		}else {
			model.put("id", 1);
			model.put("message", "付费失败");
		}
		return model;
	}
}
